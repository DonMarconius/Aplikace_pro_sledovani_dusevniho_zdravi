<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MAIN.MainPage"
             Title="Hlavní strana">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="TestyBtn"
                Text="Osobnostní testy"
                Clicked="TestyBtn_Clicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="ZaznamBtn"
                Text="Záznam Nálady"
                
                HorizontalOptions="Center" />

            <Button
                x:Name="ZapisnikBtn"
                Text="Zápisník"
                
                HorizontalOptions="Center" />

            <Button
                x:Name="KalendarBtn"
                Text="Kalendář"
                
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>